---
layout: none
---
[
    {% for post in site.posts %}
        {{if post.layout != "none"}}
        {
            "title": "{{ post.title }}",
            "path": "{{ post.url }}",
            "content": "{{ post.content | strip_html | strip_newlines}}",
            "categories": " {{ post.categories | join: ', ' }}",
            "date": "{{ post.date }}"
        }{% if forloop.last != true %},{% endif %}
    {% endfor %}
]